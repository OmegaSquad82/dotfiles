
# use codium cask instead of flatpak
if command -v brew >/dev/null; then
	brew tap ublue-os/tap
	if ! command -v codium; then
		brew install --cask vscodium-linux
	fi
fi

# linuxbrew installed package binary directories
if ! [[ "$PATH" =~ "$HOMEBREW_PREFIX/lib/ruby/gems/3.4.0/bin:" ]]; then
    PATH="$HOMEBREW_PREFIX/lib/ruby/gems/3.4.0/bin:$PATH"
fi
export PATH
